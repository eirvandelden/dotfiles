# chruby: switch to defined ruby version
source /opt/homebrew/opt/chruby/share/chruby/chruby.sh
chruby $(cat .ruby-version)

# chnode: switch to defined node version
source /opt/homebrew/opt/chnode/share/chnode/chnode.sh
chnode $(cat .node-version)

# byebug: start on a port
# export BYEBUGPORT=4000
# ruby debug
# export RUBY_DEBUG_PORT=4000
