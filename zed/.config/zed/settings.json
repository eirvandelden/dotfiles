// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  //
  // Theming
  //
  "which_key": {
    "delay_ms": null,
    "enabled": true,
  },
  "theme": {
    "mode": "system",
    "dark": "Selenized (Rails) Black",
    "light": "Selenized (Rails) Light",
  },
  "icon_theme": "Bearded Icon Theme",
  "base_keymap": null, // Base keymap still influences non-Vim contexts (palette, lists, etc.)
  // Vim mode ON
  "vim_mode": true,
  "relative_line_numbers": "enabled",
  //
  // Fonts and fontsizes
  //
  // Editor fonts
  "buffer_font_family": "MonoLisa",
  "buffer_font_size": 15,
  // UI font (applies to panels, inputs, chat panel)
  "ui_font_family": ".SystemUIFont",
  "ui_font_size": 15,
  // Font size override keys available:
  // - "ui_font_size" (UI panels and inputs)
  // - "buffer_font_size" (editor buffers)
  // - "terminal": { "font_size": <int> }
  // - "agent_font_size" (agent panel UI)
  // - "agent_buffer_font_size" (agent panel code blocks)
  "agent_buffer_font_size": 15,
  "buffer_line_height": { "custom": 1.5 },
  "buffer_font_features": { "calt": true }, // enable ligatures

  // Windows and Panels
  "tabs": { "file_icons": true },
  "toolbar": { "breadcrumbs": false, "quick_actions": false },
  "resize_all_panels_in_dock": ["left", "right"],
  "git_panel": {
    "dock": "right",
    "default_width": 450,
  },
  "outline_panel": {
    "button": false,
    "default_width": 450,
  },
  "notification_panel": {
    "button": false,
  },

  "project_panel": {
    "sort_mode": "mixed",
    "default_width": 450,
    "dock": "right",
    "entry_spacing": "standard",
    "scrollbar": { "show": "never" },
  },

  "collaboration_panel": {
    "default_width": 450,
    "button": false,
    "dock": "right",
  },
  "scrollbar": {
    "axes": {
      "horizontal": false,
    },
  },

  "gutter": {},

  //
  // AI chatting and suggestions
  //
  // Chat / Agent
  "agent": {
    "favorite_models": [
      {
        "provider": "openai",
        "model": "gpt-5.2",
      },
      {
        "provider": "copilot_chat",
        "model": "claude-opus-4.5",
      },
      {
        "provider": "copilot_chat",
        "model": "claude-sonnet-4.5",
      },
    ],
    "default_profile": "write",
    "default_model": {
      "provider": "openai",
      "model": "gpt-5.2",
    },
    "inline_assistant_model": {
      "provider": "openai",
      "model": "gpt-5",
    },
    "always_allow_tool_actions": true,
    "model_parameters": [],
    "notify_when_agent_waiting": "primary_screen",
    "play_sound_when_agent_done": true,
  },

  // Predictions
  "features": {
    "edit_prediction_provider": "copilot",
  },
  "show_edit_predictions": true,
  "inline_code_actions": true,

  //
  // Languages
  //
  // LSP
  "enable_language_server": true,

  // Make *.lua.erb be ERB so Lua tools won't try to format it
  "file_types": {
    "ERB": ["*.erb", "*.html.erb", "*.lua.erb"],
    "Git Attributes": ["**/{git,.git,.git/info}/attributes"],
    "Git Config": ["*.gitconfig", "**/{git,.git/modules,.git/modules/*}/config"],
    "Git Ignore": ["**/{git,.git}/ignore", "**/.git/info/exclude"],
  },

  // Per-language formatters to match your Conform.nvim setup
  "languages": {
    "CSS": {
      "tab_size": 2,
      "format_on_save": "on",
    },
    "Ruby": {
      "enable_language_server": true,
      "language_servers": ["solargraph"],
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "rv",
          "arguments": [
            "ruby",
            "run",
            "--",
            "rubocop",
            "--fail-level",
            "error",
            "--autocorrect",
            "--stdin",
            "{buffer_path}",
            "--stderr",
            "--server",
          ],
        },
      },
    },
    "Lua": {
      "formatter": {
        "external": {
          "command": "stylua",
          "arguments": ["-"],
        },
      },
    },
    "Shell Script": {
      "formatter": {
        "external": {
          "command": "shfmt",
          "arguments": ["-filename", "{buffer_path}"],
        },
      },
    },

    // ERB formatting notes (see comments below)
    "ERB": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "rv",
          "arguments": ["ruby", "run", "--", "herb", "format", "--stdin-filename", "{buffer_path}"],
        },
      },
    },
  },

  "lsp": {
    "solargraph": {
      "binary": {
        "path": "rv",
        "arguments": ["ruby", "run", "--", "solargraph", "stdio"],
      },
      "settings": {
        // Ensure solargraph is on PATH (Bundler or gem install).
        "initialization_options": {
          "diagnostics": true,
          "formatting": false,
        },
      },
    },
  },

  //
  // Editing & layout
  //
  "autosave": "on_focus_change",
  "ensure_final_newline_on_save": true,
  "format_on_save": "on",
  "hard_tabs": false,
  "show_whitespaces": "boundary",
  "soft_wrap": "editor_width",
  "tab_size": 2,
  "show_wrap_guides": true,
  "preferred_line_length": 120,
  "lsp_highlight_debounce": 25,
  "hover_popover_delay": 100,
  "auto_signature_help": true,
  "show_signature_help_after_edits": true,
  "inlay_hints": {
    "enabled": true,
    "edit_debounce_ms": 50,
    "scroll_debounce_ms": 25,
  },

  // Cursor (Zed canâ€™t vary by mode; a bar works well in Vim normal/insert)
  "cursor_blink": true,
  "cursor_shape": "bar",

  // Diagnostics (closest analogue to virtual_lines)
  "diagnostics": {
    "include_warnings": true,
    "inline": {
      "enabled": true,
      "update_debounce_ms": 75,
    },
  },

  // Terminal
  "terminal": {
    "option_as_meta": true,
    "font_family": "MonoLisa",
    "env": {
      "GIT_EDITOR": "zed --wait",
    },
  },

  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
}
