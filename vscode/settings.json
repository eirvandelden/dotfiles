// Place your settings in this file to overwrite the default settings
{
  "editor": {
    "tabsize": 2, // as per Ruby style Guide :)
    "renderWhitespace": true, // shows dots for spaces
    "wrappingColumn": 0, // wrap on window
    "rulers": [120],
    "fontSize": 13,
    "fontFamily": "Hasklig",
    "fontLigatures": true,
    "formatOnType": true,
    "quickSuggestions": true,
    "quickSuggestionsDelay": 0,
    "renderIdentGuides": true
  },
  "diffEditor": {
    "renderSideBySide": false,
    "ignoreTrimWhitespace": false
  },
  "files": {
    "trimTrailingWhitespace": true,
    "autoSave": "onFocusChange"
  },
  "javascript": {
    "suggest": { // improve Javascript suggestions
      "alwaysAllWords": true,
      "useCodeSnippetsOnMethodSuggest": true
    }
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/vendor": true,
    "**/.git": true,
    "**/coverage": true,
    "**/tmp": true
  },
  "travis.username": "eirvandelden",
  "editor.tabSize": 2,
  "ruby.lint": {
    "rubocop": {
      "lint": true,
      "rails": true
    },
    "ruby": true
  }
}
