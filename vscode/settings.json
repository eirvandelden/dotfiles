// Place your settings in this file to overwrite the default settings
{
  "terminal.integrated.fontFamily": "MonoLisa",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "editor.tabSize": 2, // as per Ruby style Guide :)
  "editor.renderWhitespace": "boundary", // shows dots for spaces
  "editor.wordWrap": "on", // wrap on window
  "editor.fontSize": 14,
  "editor.fontFamily": "MonoLisa",
  "editor.formatOnType": true,
  "editor.formatOnSave": true,
  "editor.quickSuggestions": {
    "comments": "on",
    "strings": "on",
    "other": "on"
  },
  "editor.quickSuggestionsDelay": 0,
  "files.autoSave": "onFocusChange",
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/vendor": true,
    "**/.git": true,
    "**/coverage": true,
    "**/tmp": true
  },
  "terminal.integrated.commandsToSkipShell": [
    "editor.action.toggleTabFocusMode",
    "workbench.action.debug.continue",
    "workbench.action.debug.pause",
    "workbench.action.debug.restart",
    "workbench.action.debug.run",
    "workbench.action.debug.start",
    "workbench.action.debug.stop",
    "workbench.action.focusActiveEditorGroup",
    "workbench.action.focusFirstEditorGroup",
    "workbench.action.focusSecondEditorGroup",
    "workbench.action.focusThirdEditorGroup",
    "workbench.action.openNextRecentlyUsedEditorInGroup",
    "workbench.action.openPreviousRecentlyUsedEditorInGroup",
    "workbench.action.quickOpen",
    "workbench.action.showCommands",
    "workbench.action.terminal.clear",
    "workbench.action.terminal.copySelection",
    "workbench.action.terminal.focus",
    "workbench.action.terminal.focusAtIndex1",
    "workbench.action.terminal.focusAtIndex2",
    "workbench.action.terminal.focusAtIndex3",
    "workbench.action.terminal.focusAtIndex4",
    "workbench.action.terminal.focusAtIndex5",
    "workbench.action.terminal.focusAtIndex6",
    "workbench.action.terminal.focusAtIndex7",
    "workbench.action.terminal.focusAtIndex8",
    "workbench.action.terminal.focusAtIndex9",
    "workbench.action.terminal.focusNext",
    "workbench.action.terminal.focusPrevious",
    "workbench.action.terminal.kill",
    "workbench.action.terminal.new",
    "workbench.action.terminal.paste",
    "workbench.action.terminal.runActiveFile",
    "workbench.action.terminal.runSelectedText",
    "workbench.action.terminal.scrollDown",
    "workbench.action.terminal.scrollDownPage",
    "workbench.action.terminal.scrollToBottom",
    "workbench.action.terminal.scrollToTop",
    "workbench.action.terminal.scrollUp",
    "workbench.action.terminal.scrollUpPage",
    "workbench.action.terminal.toggleTerminal",
    "workbench.action.toggleMaximizedPanel"
  ],
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "window.nativeTabs": true,
  "editor.minimap.enabled": false,
  "editor.multiCursorModifier": "alt",
  "editor.autoIndent": "full",
  "workbench.fontAliasing": "default",
  "workbench.colorCustomizations": {
    "editorActiveLineNumber.activeForeground": "#FFFFFF"
  },
  "explorer.openEditors.visible": 0,
  "editor.renderControlCharacters": true,
  "explorer.decorations.badges": false,
  "terminal.integrated.scrollback": 20000,
  "git.autofetch": true,
  "workbench.quickOpen.closeOnFocusLost": false,
  "terminal.external.osxExec": "iTerm.app",
  "workbench.statusBar.visible": true,
  "editor.detectIndentation": false,
  "breadcrumbs.enabled": true,
  "[ruby]": {
    "editor.formatOnSave": true
  },
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "git.autoStash": true,
  "git.enableCommitSigning": true,
  "git.confirmSync": false,
  "editor.fontLigatures": true,
  "git.allowForcePush": true,
  "git.alwaysSignOff": true,
  "git.confirmForcePush": true,
  "git.inputValidation": true,
  "workbench.editor.openSideBySideDirection": "right",
  "editor.cursorSurroundingLines": 5,
  "git.ignoreLegacyWarning": true,
  "trailing-spaces.deleteModifiedLinesOnly": true,
  "trailing-spaces.backgroundColor": "",
  "trailing-spaces.borderColor": "",
  "trailing-spaces.highlightCurrentLine": false,
  "trailing-spaces.includeEmptyLines": false,
  "trailing-spaces.showStatusBarMessage": false,
  "trailing-spaces.trimOnSave": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "workbench.sideBar.location": "right",
  "files.trimTrailingWhitespace": true,
  "window.autoDetectColorScheme": true,
  "workbench.preferredDarkColorTheme": "Selene Selenized Dark",
  "workbench.colorTheme": "Selene Selenized Light",
  "workbench.preferredLightColorTheme": "Selene Selenized Light",
  "html.format.indentInnerHtml": true,
  "solargraph.commandPath": "",
  "solargraph.diagnostics": true,
  "editor.formatOnSaveMode": "file",
  "editor.linkedEditing": true,
  "git.allowNoVerifyCommit": true,
  "git.confirmNoVerifyCommit": false,
  "emmet.includeLanguages": {
    "erb": "html",
    "html.erb": "html"
  },
  "solargraph.autoformat": true,
  "debug.internalConsoleOptions": "openOnSessionStart",
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "comment",
          "constant", //String, Number, Boolean…, this, super
          "keyword", //import, export, return…
          "markup.italic",
          "meta.selector",
          "storage.modifier", //static keyword
          "storage.type",
          "storage.type.class.js", //class keyword
          "string.quoted",
          "variable.language"
        ],
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": [
          //following will be excluded from italics (VSCode has some defaults for italics which aren't amazingT)
          "invalid",
          "keyword.operator",
          "constant.numeric.css",
          "keyword.other.unit.px.css",
          "constant.numeric.decimal.js",
          "constant.numeric.json"
        ],
        "settings": {
          "fontStyle": ""
        }
      }
    ]
  },
  "solargraph.formatting": true,
  "files.associations": {
    ".env*": "dotenv"
  },
  "editor.guides.indentation": false,
  "editor.defaultFormatter": "castwide.solargraph",
  "rdbg.rubyVersionManager": "chruby",
  "dotenv.enableAutocloaking": false,
  "rubyLsp.linters": [],
  "chat.editor.fontSize": 14
}